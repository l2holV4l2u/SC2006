generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------- USERS & AUTH ----------------
model User {
  id                 String   @id @default(uuid())
  email              String   @unique
  name              String?
  image             String?
  role               Role     @default(STANDARD)
  renewSubscription  DateTime
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

enum Role {
  STANDARD
  PREMIUM
}
